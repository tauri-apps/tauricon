{
  "name": "@soire/tauricon",
  "version": "1.0.0",
  "private": true,
  "description": "Make icons for your Tauri app.",
  "homepage": "https://github.com/tauri-apps/tauricon#readme",
  "bugs": {
    "url": "https://github.com/tauri-apps/tauricon/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tauri-apps/tauricon.git"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/tauri"
  },
  "license": "Apache-2.0 OR MIT",
  "contributors": [
    "Tauri Programme within The Commons Conservancy"
  ],
  "bin": "./bin/tauricon.js",
  "files": [
    "bin",
    "dist",
    "scripts"
  ],
  "scripts": {
    "build": "rimraf ./dist && rollup -c --silent",
    "build:release": "rimraf ./dist && cross-env NODE_ENV=production rollup -c",
    "postinstall": "",
    "lint:lockfile": "lockfile-lint --path yarn.lock --type yarn --validate-https --allowed-hosts npm yarn",
    "prepublishOnly": "yarn build-release",
    "pretest": "yarn build",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --forceExit --no-cache --testPathIgnorePatterns=\"(build|dev)\"",
    "test:local": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --forceExit"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "cross-env": "7.0.3",
    "cross-spawn": "7.0.3",
    "find-up": "6.3.0",
    "fs-extra": "10.0.1",
    "glob": "7.2.0",
    "global-agent": "3.0.0",
    "inquirer": "8.2.1",
    "is-png": "3.0.1",
    "minimist": "1.2.5",
    "ms": "2.1.3",
    "png-to-ico": "2.1.3",
    "png2icons": "2.0.1",
    "read-chunk": "4.0.2",
    "semver": "7.3.5",
    "sharp": "0.30.3",
    "update-notifier": "5.1.0"
  },
  "devDependencies": {
    "@jest/globals": "27.5.1",
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.1",
    "@swc/core": "1.2.157",
    "@types/cross-spawn": "6.0.2",
    "@types/fs-extra": "9.0.13",
    "@types/glob": "7.2.0",
    "@types/global-agent": "2.1.1",
    "@types/inquirer": "8.2.0",
    "@types/ms": "0.7.31",
    "@types/semver": "7.3.9",
    "@types/sharp": "0.30.0",
    "is-running": "2.1.0",
    "jest": "27.5.1",
    "jest-transform-toml": "1.0.0",
    "lockfile-lint": "4.7.4",
    "promise": "8.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.70.1",
    "rollup-plugin-swc": "0.2.1",
    "rollup-plugin-terser": "7.0.2",
    "tslib": "2.3.1",
    "typescript": "4.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
